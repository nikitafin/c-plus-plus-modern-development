{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27,
    "patch": 1
  },
  "configurePresets": [
    {
      "name": "clang16",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/",
      "installDir": "${sourceDir}/bin/",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "warnings": {
        "dev": false
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Linux"
          ]
        },
        "jetbrains.com/clion": {
          "toolchain": "WSL-clang"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "clang16"
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "steps": [
        {
          "type": "configure",
          "name": "clang16"
        },
        {
          "type": "build",
          "name": "default"
        }
      ]
    }
  ]
}
